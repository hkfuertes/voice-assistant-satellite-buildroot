#!/bin/sh

case "$1" in
  start)
    printf "Loading kernel modules:"
    
    if [ -r /etc/modules ]; then
      while read module args; do
        case "$module" in
          ""|"#"*) continue ;;
        esac
        printf " $module"
        modprobe $module $args 2>/dev/null
      done < /etc/modules
    fi
    
    echo " OK"
    ;;
    
  stop)
    ;;
    
  *)
    echo "Usage: $0 {start|stop}"
    exit 1
esac

exit 0
