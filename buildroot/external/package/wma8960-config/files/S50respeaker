#!/bin/sh
#
# ReSpeaker 2-Mic HAT v1 ALSA Setup
#

DAEMON="respeaker"

case "$1" in
  start)
	printf "Configuring ReSpeaker 2-Mic HAT v1: "
	/usr/local/bin/$DAEMON
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
  stop)
	# Nothing to stop
	;;
  restart|reload)
	"$0" stop
	"$0" start
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?