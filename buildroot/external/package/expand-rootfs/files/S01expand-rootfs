#!/bin/sh

NAME="expand-rootfs"
PROG="/usr/bin/rootfs-resizer"
FLAG="/RESIZED"
PART_FLAG="/PART_RESIZED"

start() {
    [ -f "$FLAG" ] && return 0
    
    printf 'Expanding rootfs: '
    
    if "$PROG"; then
        echo "OK"
        
        # If partition was just resized, reboot
        if [ -f "$PART_FLAG" ] && [ ! -f "$FLAG" ]; then
            echo "Partition resized. Rebooting to apply..."
            sleep 2
            sync
            reboot -f
        fi
    else
        echo "FAIL"
        return 1
    fi
}

stop() {
    :
}

case "$1" in
    start) start ;;
    stop) stop ;;
    restart) stop; start ;;
    *) echo "Usage: $0 {start|stop|restart}"; exit 1 ;;
esac
