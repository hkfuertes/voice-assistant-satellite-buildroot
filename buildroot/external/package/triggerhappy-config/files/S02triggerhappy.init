#!/bin/sh

case "$1" in
    start)
        echo "Starting triggerhappy..."
        thd --daemon --triggers /etc/triggerhappy/triggers.d/ \
            --deviceglob /dev/input/event*
        ;;
    stop)
        killall thd
        ;;
    restart)
        $0 stop
        $0 start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac
