config BR2_PACKAGE_PYTHON_PYMICRO_WAKEWORD
    bool "python-pymicro-wakeword"
    depends on BR2_PACKAGE_PYTHON3
    select BR2_PACKAGE_PYTHON_PYMICRO_FEATURES
    select BR2_PACKAGE_PYTHON_NUMPY
