config BR2_PACKAGE_WYOMING_SATELLITE
    bool "python-wyoming-satellite"
    depends on BR2_PACKAGE_PYTHON3
    select BR2_PACKAGE_PYTHON_SPIDEV
    select BR2_PACKAGE_PYTHON_NUMPY
    select BR2_PACKAGE_PYTHON_ZEROCONF
    select BR2_PACKAGE_ALSA_LIB
    select BR2_PACKAGE_ALSA_UTILS
    select BR2_PACKAGE_PYTHON_WYOMING
    select BR2_PACKAGE_PYTHON_PYRING_BUFFER
    help
      Wyoming Satellite is a voice assistant client that connects
      to a Wyoming server for voice recognition and synthesis.
      
      https://github.com/rhasspy/wyoming-satellite

if BR2_PACKAGE_WYOMING_SATELLITE
    config BR2_PACKAGE_WYOMING_SATELLITE_NAME
        string "Satellite name"
        default "wyoming-satellite"
        help
          Name of the satellite instance

    config BR2_PACKAGE_WYOMING_SATELLITE_WAKE_URI
        string "Wake word server URI"
        default "tcp://127.0.0.1:10400"
        help
          URI of the wake word server

    config BR2_PACKAGE_WYOMING_SATELLITE_WAKE_WORD
        string "Wake word"
        default "ok wyoming"
        help
          Wake word to detect

    config BR2_PACKAGE_WYOMING_SATELLITE_LEDS
        bool "Enable LED support"
        help
          Enable LED support (requires rpi-lgpio, gpiozero, colorzero)
endif
