# ======================
# ALSA/Sound Core (REQUIRED)
# ======================
CONFIG_SND=y
CONFIG_SND_TIMER=y
CONFIG_SND_PCM=y
CONFIG_SND_RAWMIDI=y
CONFIG_SND_JACK=y
CONFIG_SND_OSSEMUL=y

# ======================
# ALSA SOC (REQUIRED)
# ======================
CONFIG_SND_SOC=y
CONFIG_SND_SOC_I2C_AND_SPI=y

# ======================
# Codecs for Seeed (REQUIRED)
# ======================
CONFIG_SND_SOC_WM8960=m
CONFIG_SND_SOC_AC108=m

# ======================
# Platform Support (REQUIRED)
# ======================
CONFIG_SND_BCM2835=m
CONFIG_SND_BCM2835_SOC=m
CONFIG_SND_BCM2835_SOC_SIMPLE_CARD=m

# ======================
# I2C & Regulators (REQUIRED)
# ======================
CONFIG_I2C=y
CONFIG_I2C_BCM2708=m
CONFIG_I2C_BCM2835=m
CONFIG_REGMAP=y
CONFIG_REGMAP_I2C=y

# ======================
# GPIO (REQUIRED for Seeed)
# ======================
CONFIG_GPIOLIB=y
CONFIG_GPIO_SYSFS=y

# ======================
# USB Audio (OPTIONAL - si quieres audio USB)
# ======================
CONFIG_SND_USB_AUDIO=m

# ======================
# PWM for LEDs (OPTIONAL - si usas LEDs)
# ======================
CONFIG_PWM=y
CONFIG_PWM_BCM2835=m

# ======================
# ConfigFS (REQUIRED para dtoverlay/dtparam)
# ======================
CONFIG_CONFIGFS_FS=y

# ======================
# Device Tree support
# ======================
CONFIG_OF=y
CONFIG_OF_DYNAMIC=y
CONFIG_OF_OVERLAY=y
CONFIG_OF_CONFIGFS=y
